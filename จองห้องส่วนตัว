<!DOCTYPE html>
<html>
<head>
    <base target="_top">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body { padding: 40px 20px; background-color: #f0f2f5; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        .container { max-width: 550px; background: white; padding: 30px; border-radius: 15px; box-shadow: 0 4px 15px rgba(0,0,0,0.1); }
        .header-title { color: #1a73e8; font-weight: bold; margin-bottom: 25px; text-center: center; }
        .form-label { font-weight: 500; }
    </style>
</head>
<body>
    <div class="container">
        <h3 class="header-title text-center">ระบบจองห้องประชุมรายวัน</h3>
        <form id="bookingForm" onsubmit="handleFormSubmit(this)">
            
            <div class="mb-3">
                <label class="form-label">ชื่อผู้จอง</label>
                <input type="text" name="name" class="form-control" placeholder="ระบุชื่อ" required>
            </div>

            <div class="mb-3">
                <label class="form-label">เลือกห้อง</label>
                <select name="room" class="form-select">
                    <option value="Room 01">ห้อง VIP </option>
                    <option value="Room 02">ห้อง Meeting </option>
                    <option value="Seminar Room">ห้องแอร์เหมา</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">วันที่ต้องการจอง</label>
                <input type="date" name="bookingDate" id="bookingDate" class="form-control" required>
            </div>

            <div class="row">
                <div class="col-6 mb-3">
                    <label class="form-label">เวลาเริ่ม</label>
                    <input type="time" name="startTime" class="form-control" required>
                </div>
                <div class="col-6 mb-3">
                    <label class="form-label">เวลาสิ้นสุด</label>
                    <input type="time" name="endTime" class="form-control" required>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3" id="submitBtn">ยืนยันการจอง</button>
        </form>
        <div id="message" class="mt-3 text-center fw-bold"></div>
    </div>

    <script>
        // ตั้งค่าวันที่เริ่มต้นเป็นวันปัจจุบัน
        document.getElementById('bookingDate').valueAsDate = new Date();

        function handleFormSubmit(formObject) {
            event.preventDefault();
            const btn = document.getElementById('submitBtn');
            const msgDiv = document.getElementById('message');
            
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> กำลังบันทึก...';
            msgDiv.className = "mt-3 text-center text-primary";
            msgDiv.innerHTML = "รอสักครู่...";

            google.script.run
                .withSuccessHandler(function(response) {
                    msgDiv.className = "mt-3 text-center text-success";
                    msgDiv.innerHTML = "✅ " + response;
                    document.getElementById('bookingForm').reset();
                    document.getElementById('bookingDate').valueAsDate = new Date();
                    btn.disabled = false;
                    btn.innerText = "ยืนยันการจอง";
                })
                .withFailureHandler(function(err) {
                    msgDiv.className = "mt-3 text-center text-danger";
                    msgDiv.innerHTML = "❌ ผิดพลาด: " + err;
                    btn.disabled = false;
                    btn.innerText = "ลองอีกครั้ง";
                })
                .processForm(formObject);
        }
    </script>
</body>
</html>
